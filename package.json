{
  "name": "tradez99-3",
  "version": "0.1.0",
  "description": "A modular, strategy-agnostic cryptocurrency trading bot",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "lint": "eslint src/ tests/",
    "lint:fix": "eslint src/ tests/ --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "test": "vitest run",
    "test:unit": "vitest run tests/unit",
    "test:int": "vitest run tests/integration",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "backtest": "tsx src/backtest.ts"
  },
  "keywords": [
    "trading-bot",
    "cryptocurrency",
    "bitcoin",
    "binance",
    "kraken",
    "automated-trading",
    "backtesting"
  ],
  "license": "GPL-3.0",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "ccxt": "^4.4.0",
    "dotenv": "^16.4.0",
    "pino": "^9.5.0",
    "pino-pretty": "^13.0.0",
    "prom-client": "^15.1.0",
    "sql.js": "^1.11.0",
    "ws": "^8.18.0",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.0",
    "@types/sql.js": "^1.4.9",
    "@types/ws": "^8.5.0",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "eslint": "^9.16.0",
    "prettier": "^3.4.0",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0",
    "vitest": "^2.1.0"
  }
}
